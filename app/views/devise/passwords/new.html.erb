<div class="marginadjust">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "field__label", for: "input-email" %><br />
    <%= f.email_field :email, class: "field__input one-column-form__input--text", type:"email", placeholder: "Email address", autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send password instructions" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
