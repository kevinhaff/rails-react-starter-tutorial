<div class="marginadjust">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "field__label", for: "input-email" %><br />
      <%= f.email_field :email, class: "field__input one-column-form__input--text", type:"email", placeholder: "Email address", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, class: "field__label", for: "input-password" %><br />
      <%= f.password_field :password, class: "field__input one-column-form__input--text", type:"password", placeholder: "Password", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
